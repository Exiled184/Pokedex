<%- include('../partials/header') %>

<main>
  <form
    id="add_pokemon_to_game"
    action="/games/<%= game._id %>/pokemons"
    method="POST"
  >
    <select name="pokemonId">
      <%- pokemon.map(p => `
      <option value="${p._id}">${p.name}</option>
      `).join("") %>
    </select>
    <button type="submit">Add Pokemon to Game</button>
  </form>
</main>

<section id="show-page">
  <div>
    <h3>Trainer:</h3>
    <div><%= game.trainerName %></div>
    <br />
    <h3>Version:</h3>
    <div><%= game.versionTitle %></div>
    <br />
    <h3>Release Year:</h3>
    <div><%= game.releaseYear %></div>
    <br />
    <h3>Console:</h3>
    <div><%= game.console %></div>
    <br />
  </div>

  <h3>Pokemon:</h3>

  <ul>
    <%- game.pokemon.map(p => `
    <img src="${p.sprites.front_default}" />
    ` ) %>
  </ul>

  <form
    action="/games/<%= game.id %>/pokemons?_method=DELETE"
    class="delete-form"
    method="POST"
  >
    <button type="submit">Undo, delete last pokemon</button>
  </form>
</section>

<%- include('../partials/footer') %>
