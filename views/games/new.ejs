<%- include('../partials/header') %>

<h2 class="new_game">Enter a New Game Version</h2>
<form action="/games" method="POST" class="new_game">
  <label class="input_boxes"
    >Game Version
    <select name="versionTitle">
      <option value="Red">Red</option>
      <option value="Blue">Blue</option>
      <option value="Yellow">Yellow</option>
      <option value="Fire Red">Fire Red</option>
      <option value="Leaf Green">Leaf Green</option>
    </select>
  </label>

  <br />

  <label class="input_boxes"
    >Release Year
    <select name="releaseYear">
      <option value="1998">1998</option>
      <option value="1999">1999</option>
      <option value="2004">2004</option>
    </select>
  </label>

  <br />

  <label class="input_boxes"
    >Console
    <select name="console">
      <option value="Nintendo Gameboy">Nintendo Gameboy</option>
      <option value="Nintendo Gameboy Colour">Nintendo Gameboy Colour</option>
      <option value="Nintendo Gameboy Advance SP">
        Nintendo Gameboy Advance
      </option>
      <option value="Nintendo Gameboy Advance SP">
        Nintendo Gameboy Advance SP
      </option>
    </select>
  </label>

  <br />

  <label class="input_boxes"
    >Trainer Name
    <input type="text" name="trainerName" />
  </label>

  <br />

  <button type="submit">Add Game Version</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>
