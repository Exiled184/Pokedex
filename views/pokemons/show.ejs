<%- include('../partials/header') %>

<body>
    <div class="pokemon_info_container">
    <div class="pokemon_info_image">
        <img src='<%= pokemon ? pokemon.sprites.front_default: "" %>' class="pokemon_image"></img></div>

    <div class="pokemon_info_name">
        <h3>Pokemon name:</h3>
        <p class="pokemon_name"><%= pokemon ? pokemon.name: "" %></p></div>
    <div class="pokemon_info_id">
        <h3>Pokemon ID:</h3>
        <p class="pokemon_id">#<%= pokemon ? pokemon.id: "" %></p></div>
    <div class="pokemon_info_types">
        <h3>Types:</h3>
        <p class="pokemon_type">
            <% if (pokemon && pokemon.types) { %>
                <% pokemon.types.forEach(function(typeObj) { %>
                    <p><%= typeObj.type.name %></p>
                <% }) %>
            <% } %>
         </p></div>
    <div class="pokemon_info_stats">
         <h3>Stats:</h3>
         <p class="pokemon_stats">
            <% if(pokemon && pokemon.stats) { %>
                <% pokemon.stats.forEach(function(statsObj) { %>
                <p><%= statsObj.stat.name %>: <%= statsObj.base_stat %></p>
                <progress value = "<%= statsObj.base_stat %>" max="100"></progress>
                <% }) %>
               <% } %>
         </p></div>
   
    
</body>


<%- include('../partials/footer') %>